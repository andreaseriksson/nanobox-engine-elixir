#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

if [[ $(grep -c build_triggers /opt/nanobox/hooks/lib/boxfile.rb) -gt 1 ]]; then
	cat <<-END
	run.config:
	  build_triggers:
	    - mix.exs
	    - mix.lock
	END
fi
cat <<-END
run.config:
  cache_dirs:
    - deps
    - _build
END

exit 0
