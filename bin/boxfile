#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nanobox/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/elixir.sh

# insert process to build the app's Boxfile
# documentation: http://docs.nanobox.io/engines/scripts/boxfile/
nos_print_process_start "Generating Engine Boxfile"

cat <<-END
code.build:
  lib_dirs:
    - .mix
    - .hex
END