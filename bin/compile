#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nanobox/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/elixir.sh

# insert the build process used to prepare code for deployment
# documentation: http://docs.nanobox.io/engines/scripts/build/

mix_local_hex

mix_local_rebar

get_deps

compile_deps

compile

npm_install

exit 0